class ShapeCalculator {
	public double calculateArea(String shape, double width, double height) {
		if(shape.equals("rectangle")) {
			return width * height;
		}else if(shape.equals("circle")) {
			return Math.PI * width * width;
		}
		
		return 0;
	}
}